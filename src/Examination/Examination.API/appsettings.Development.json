{
  "DatabaseSettings": {
    "Server": "localhost:27017",
    "DatabaseName": "Exam",
    "User": "mongoadmin",
    "Password": "Admin%401234%24"
  },

  "IdentityUrl": "https://localhost:5001",
  "ApplicationId": "examination_api",
  "ScopeApi": {
    "Name": "exam_api",
    "Scope": "exam_api"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.EntityFrameworkCore": "Error"
        //"Microsoft.AspNetCore.Diagnostics.HealthChecks": "Error",
        //"Microsoft.Extensions.Diagnostics.HealthChecks": "Error",
        //"AspNetCore.HealthChecks.UI": "Error",
        //"HealthChecks": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "Examination.API"
    }
  },
  "HealthCheckConfiguration": {
    "MongoDbUrl": "mongodb://mongoadmin:Admin%401234%24@localhost:27017/Exam?authSource=admin"
  },
  "AllowedHosts": "*"
}
